{{- $datacenter := env "NOMAD_DATACENTER" -}}
{
    {{if $datacenter}}"datacenter": "{{$datacenter}}",{{end}}
    "data_dir": "/var/lib/nomad",
    "log_level": "INFO",
    "disable_anonymous_signature": true,
    "disable_update_check": true,

    "server": {
        "enabled": false
    },

    "client": {
        "enabled": false
    }
}
