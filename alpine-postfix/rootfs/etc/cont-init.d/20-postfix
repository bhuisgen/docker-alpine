#!/usr/bin/with-contenv sh

if [ ! -z "${POSTFIX_TEMPLATE}" ] && [ -z "${CONSUL_ADDR}" ]; then
    cp "/etc/container.d/templates/postfix/${POSTFIX_TEMPLATE}"/*.hcl /etc/container.d/conf-init.d/
elif [ ! -z "${POSTFIX_TEMPLATE}" ] && [ ! -z "${CONSUL_ADDR}" ]; then
    cp "/etc/container.d/templates/postfix/${POSTFIX_TEMPLATE}"/*.hcl /etc/container.d/conf-services.d/
fi
