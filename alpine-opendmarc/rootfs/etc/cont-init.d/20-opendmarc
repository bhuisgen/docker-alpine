#!/usr/bin/with-contenv sh

if [ ! -z "${OPENDMARC_TEMPLATE}" ] && [ -z "${CONSUL_ADDR}" ]; then
    cp "/etc/container.d/templates/opendmarc/${OPENDMARC_TEMPLATE}"/*.hcl /etc/container.d/conf-init.d/
elif [ ! -z "${OPENDMARC_TEMPLATE}" ] && [ ! -z "${CONSUL_ADDR}" ]; then
    cp "/etc/container.d/templates/opendmarc/${OPENDMARC_TEMPLATE}"/*.hcl /etc/container.d/conf-services.d/
fi
