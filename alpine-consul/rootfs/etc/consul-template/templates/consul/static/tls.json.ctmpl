{{- $tls := env "CONSUL_TLS" -}}
{{- $ca_file := env "CONSUL_TLSCAFILE" -}}
{{- $cert_file := env "CONSUL_TLSCERTFILE" -}}
{{- $key_file := env "CONSUL_TLSKEYFILE" -}}
{
    {{if eq $tls "1"}}
    "ca_file": "{{$ca_file}}",
    "cert_file": "{{$cert_file}}",
    "key_file": "{{$key_file}}",
    "verify_server_hostname": true,
    "verify_incoming": true,
    "verify_outgoing": true,
    "ports": {
        "https": 8501
    }
    {{end}}
}
